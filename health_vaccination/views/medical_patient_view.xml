<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="medical_patient_vaccination_view_form" model="ir.ui.view">
        <field name="name">medical.patient.vaccination.form</field>
        <field name="model">medical.patient</field>
        <field name="inherit_id" ref="medical.medical_patient_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Vaccination">
                    <group>
                        <field name="vaccination_ids" widget="many2one" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
